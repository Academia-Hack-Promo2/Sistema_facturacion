 
<div id="page-content-wrapper">
  <div class="page-content inset">
    <div class="row">
        <div class="col-md-12">
          <div class="content">
            <div class="row">
            <h2>Products</h2>
               <%= link_to "New Product", new_product_path, :class => 'btn btn-mini btn-success' %>    
             <hr>                    
            </div>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <th>NÂ°</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Date</th>
                    <th>Quantity</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                  </thead>
                  <tbody>
                    <% @products.each_with_index do |product, index| %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= product.name %></td>
                      <td><%= product.description %></td>
                      <td><%= product.price %></td>
                      <td><%= product.date %></td>
                      <td><%= product.quantity %></td>
                      <td><%= link_to  "Details", product_path(product), :class => 'btn btn-info' %></td>
                      <td><%= link_to  "Edit", edit_product_path(product), :class => 'btn btn-primary' %></td>
                      <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>                  
          </div> 
      </div>
    </div>
  </div>    

