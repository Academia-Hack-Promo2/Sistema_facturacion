 
<div id="page-content-wrapper">
  <div class="page-content inset">
    <div class="row">
        <div class="col-md-12">
          <div class="content">
            <div class="row">
            <h1>Purchases</h1>
                   
             <hr>                    
            </div>
            <ul class="nav nav-tabs">
              <li role="presentation"><%= link_to "Purchases", purchases_path %></li>
              <li role="presentation"><%= link_to "Draft", purchases_draft_path %></li>
              <li role="presentation" class="active"><%= link_to "Legal", purchases_legal_path %></li>
              <li role="presentation"><%= link_to "Cash", purchases_cash_path %></li>
              <li role="presentation"><%= link_to "Credit", purchases_credit_path %></li>
              <%= link_to "New Sale", new_invoice_path, :class => 'btn btn-mini btn-success' %>
            </ul>
            <br><br>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <th>NÂ°</th>
                    <th>Payment</th>
                    <th>Invoice</th>
                    <th>Description</th>
                    <th>Total</th>                    
                    <th>Date</th>                    
                    <th>Associated</th>                    
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                  </thead>
                  <tbody>
                    <% @purchases.each_with_index do |invoice, index| %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= invoice.kind_payment %></td>
                      <td><%= invoice.kind_invoice %></td>
                      <td><%= invoice.description %></td>
                      <td><%= invoice.subtotal %></td>
                      <td><%= invoice.date %></td>
                      <td><%= invoice.associated_id %></td>
                      <td><%= link_to  "Details", invoice_path(invoice), :class => 'btn btn-info' %></td>
                      <td><%= link_to  "Edit", edit_invoice_path(invoice), :class => 'btn btn-primary' %></td>
                      <td><%= link_to 'Delete', invoice, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>                  
          </div> 
      </div>
    </div>
  </div>    

